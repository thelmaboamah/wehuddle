<% provide(:button_text, 'Update') %>

<%= form_for @chatroom, url: chatroom_path, method: :patch, html: { multipart: true },
id: "edit_chatroom" do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %><br>

  <%= f.submit yield(:button_text), class: "btn btn-default" %>

<% end %>

<%= button_to "Delete", chatroom_delete_path, method: :delete, data: {confirm: "Are you sure you want to delete this chat?"} %>