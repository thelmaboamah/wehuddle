<%= form_for @chatroom, url: edit_chatroom_path, method: :patch, html: { multipart: true } do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %><br>

  <%= f.submit yield(:button_text), class: "btn btn-default" %>

<% end %>