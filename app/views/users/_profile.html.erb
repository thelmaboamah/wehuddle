<br>
<% if @user.avatar != nil %>
<%= image_tag("#{@user.avatar}", class: "ui medium right floated image") %>
<% end %>
<h2 class="profile-name"><%= @user.first_name %> <%= @user.last_name %></h2>


<div class="user-info panel panel-default">
  <h2><%= fa_icon "user-circle-o" %> Bio</h2>
  <p><%= @user.biography %></p>
  <% if @user == current_user %>
    <%= fa_icon "pencil" %> <%= link_to 'Edit Profile', edit_user_registration_path %>
  <% else %><% end %>

  <h2><%= fa_icon "envelope" %> Contact</h2>
  <p>Email: <%= @user.email %></p>
  <p>Username: <%= @user.username %></p>
  <h2><%= fa_icon "commenting-o" %> Chats</h2>


  <div class="ui three column grid">
    <div class="row">
      <% current_user.chatrooms.each do |room| %>
        <div class="column">
        <%= link_to room.title, chatroom_path(room.id) %>
        </div>
      <% end %>
    </div>
  </div>
